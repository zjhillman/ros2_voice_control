#JSGF V1.0;

/**
 * JSGF Grammar similar to kws example
 */

grammar voice_cmd;

public <command> = [<request>] [<polite>] <action_list>;

<request> = CAN YOU | COULD YOU;

<polite> = PLEASE;

<action_list> = <movement> | <action>;

<movement> = MOVE [<direction>] [<speed>];

<direction> = FORWARD | BACK | LEFT | RIGHT;

<speed> = FULL SPEED | HALF SPEED;

<action> = THROW THIS <object> [<preposition>] [<article>] <object> | BRING ME [<article>] <object>;

<article> = THE | A;

<preposition> = IN;

<object> = PAPER | TRASH | TRASH CAN | COOKIE | BISCUIT;